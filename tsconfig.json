{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "lib": ["es2020"],
    "target": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // "strict": true,
    "removeComments": true
  },
  "exclude": ["node_modules"]
}
